@model burger.Models.tblBurger
@{
    ViewData["Title"] = "Edit Food Item";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Edit Food Item</h2>
    </div>
    <div class="container shadow p-5">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div class="form-row">

                <input type="hidden" asp-for="BurgerID" />

                <div class="form-group col-md-6 mb-3">
                    <label>Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter the name ... ">
                    <span asp-validation-for="Name" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6 mb-3">
                    <label>Price</label>
                    <input type="text" class="form-control" asp-for="Price" placeholder="Enter the price ... ">
                    <span asp-validation-for="Price" class="alert-danger"></span>
                </div>
                <!-- Add more form fields based on the product type -->
            </div>

            <a asp-controller="FoodMenu" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="mdi mdi-arrow-left-bold-circle"></i>
                Go back
            </a>

            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="mdi mdi-content-save-all"></i> Save changes
            </button>

        </form>
    </div>
</main>
