@model burger.Models.tblBurger
@{
    ViewData["Title"] = "Delete Food Item";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Confirm to delete a menu</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="BurgerID">Burger ID</label>
            <input type="text" class="form-control mb-3" asp-for="BurgerID" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control mb-3" asp-for="Name" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Price">Price</label>
            <input type="text" class="form-control mb-3" asp-for="Price" disabled />
        </div>
    </div>
    <!-- Begin Form --->
    <form asp-action="Delete" method="Post">
        <input type="hidden" asp-for="BurgerID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="mdi mdi-arrow-left-bold-circle"></i> Go back
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="mdi mdi-delete"></i> Delete
        </button>
    </form>
    <!-- End Form -->
</main>
