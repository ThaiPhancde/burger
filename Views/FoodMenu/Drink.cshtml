@model IList<burger.Models.ViewDrink>
@{
    ViewData["Title"] = "Drink";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
        <h1 class="text-center">Our Delicious </h1>
    
    <section class="Drink-menu py-5">
        <div class="container py-md-5">
            <div class="row">
                @foreach (var Drink in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="menu-item card h-100">
                            <a href="@Drink.Link" title="@Drink.Name">
                                <img src="@Url.Content(Drink.Image)" class="card-img-top img-fluid" alt="@Drink.Name">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="@Drink.Link" title="@Drink.Name">@Drink.Name</a>
                                </h5>
                                <p class="card-text">@Drink.Details</p>
                                <div class="price">@Drink.Price VND</div>
                                <a href="@Url.Action("Index", "Cart", new { id = Drink.DrinkID })" class="btn btn-primary mt-2">Order Now</a>
                                <div class="actions mt-2">
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <a href="@Url.Action("AddToWishlist", "Wishlist", new { id = Drink.DrinkID })" class="link-wishlist">Add to Wishlist</a>
                                        </li>
                                        <li class="list-inline-item">|</li>
                                        <li class="list-inline-item">
                                            <a href="@Url.Action("AddToCompare", "Compare", new { id = Drink.DrinkID })" class="link-compare">Compare</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
</section>
</body>

